<div class="container">
<div class="row">

<div class="col-md-6">
<%= image_tag @wine.image.url(:original), class: "img-responsive" %>
</div>

<div class="col-md-6">
<h3><%= @wine.name %></h3>
<p class="justify"><%= @wine.description %></p>
<h4>$<%= @wine.price.to_f / 100 %></h4>
</div>

</div>
</div>

<div class="text-center">
  <% if current_user %>
<%= link_to "Edit", edit_wine_path(@wine)  %>
<%= link_to "Back", wines_path  %>
<% end %>
</div>
