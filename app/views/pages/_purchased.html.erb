  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @purchased.each do |sale| %>
    <tr>
      <td><%= link_to sale.wine.name, pickup_path(sale.guid) %></td>
      <td><%= time_ago_in_words(sale.created_at) %> ago</td>
    </tr>
    <% end %>
  </tbody>
</table>
