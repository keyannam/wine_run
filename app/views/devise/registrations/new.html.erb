<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
<h2 class="text-center">Sign Up</h2>
  <div class="col-md-6 form-group">
    <%= f.error_notification %>

    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "First & Last Name", input_html: {class: "form-control"} %>
    <%= f.input :phone, required: true, autofocus: true, label: false, placeholder: "Phone Number", input_html: {class: "form-control"} %>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
    <%= f.input :password, required: true, label: false, placeholder: "Password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation", input_html: {class: "form-control"} %>
    </div>
    <div class="col-md-6 form-group">
    <%= f.input :address, required: true, autofocus: true, label: false, placeholder: "Delivery Address Line 1", input_html: {class: "form-control"} %>
    <%= f.input :address, required: false, autofocus: true, label: false, placeholder: "Address Line 2 - optional", input_html: {class: "form-control"} %>
    <%= f.input :city, required: true, autofocus: true, label: false, placeholder: "City" %>
    <%= f.input :state, required: true, autofocus: true, label: false, placeholder: "State" %>
    <%= f.input :zipcode, required: true, autofocus: true, label: false, placeholder: "Zip Code" %>
  </div>
    <div class="text-center">
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
  </div>
  <span class="clearfix">
<%= render "devise/shared/links" %>
<% end %>
